        {/* No of Servings */}
                            <div className="row row-cols-1 row-cols-md-4 g-4">
                                <div className="col form-fields">
                                    <label htmlFor="exampleInputServing" className="form-label">Serving</label>
                                    <input 
                                    type="text" 
                                    className="form-control" 
                                    id="exampleInputServing" 
                                     aria-invalid={errors.serving ? "true" : "false"} 
                                    {...register("serving", {
                                        required: "Please choose number of servings*",
                                        pattern: {
                                        value: /^[1-999]+$/i,
                                        message: "please enter a digit *"
                                        }
                                    })}
                                    // defaultValue={user.recipeName}
                                    />
                                    {errors.serving && <span role="alert" className="requiredField">{errors.serving.message}</span>}
                                </div>
                              
                              {/* Category */}
                                <div className="col form-fields">
                                    <label htmlFor="exampleInputCategory" className="form-label">Category</label>
                                    <input 
                                    type="text" 
                                    className="form-control" 
                                    id="exampleInputCategory" 
                                     aria-invalid={errors.category ? "true" : "false"} 
                                    {...register("category", {
                                        required: "Category is required*",
                                        pattern: {
                                        value: /^[A-Za-z]+$/i ,
                                        message: "Category is required"
                                        }
                                    })}
                                    // defaultValue={user.category}
                                    />
                                    {errors.category && <span role="alert" className="requiredField">{errors.category.message}</span>}
                                </div>
                                {/* Duration/Time */}
                                <div className="col form-fields">
                                    <label htmlFor="exampleInputDuration" className="form-label">Duration</label>
                                    <input 
                                    type="number" 
                                    className="form-control" 
                                    id="exampleInputDuration" 
                                    aria-invalid={errors.duration ? "true" : "false"}
                                    {...register("duration", {
                                      required: "Duration/Time is required*",
                                      pattern: {
                                        value: /^[1-999]+$/i,
                                        message: "Please enter a valid duration"
                                      }
                                    })}
                                    // defaultValue={user.duration}
                                    />
                                    {errors.duration && <span role="alert" className="requiredField">{errors.duration.message}</span>}
                                </div>
                                {/* Level of Difficulty */}
                                <div className="col form-fields">
                                    <label htmlFor="exampleInputLevel" className="form-label">Level</label>
                                    <input 
                                    type="text" 
                                    className="form-control" 
                                    id="exampleInputLevel" 
                                    aria-invalid={errors.level ? "true" : "false"}
                                    {...register("level", {
                                      required: "please choose level of difficulty*",
                                      pattern: {
                                        value: /^[A-Za-z]+$/i ,
                                        message: "please choose level of difficulty"
                                      }
                                    })}
                                    // defaultValue={user.duration}
                                    />
                                    {errors.level && <span role="alert" className="requiredField">{errors.level.message}</span>} 
                                </div>
                                
                            </div>
                        
                        </div>
                        <div className="getForm">  
                            <input type="submit" className="btn btn-dark btn-block submit-user-info"/>

                        </div>